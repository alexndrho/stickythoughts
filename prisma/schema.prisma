generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Thought {
  id        String   @id @default(uuid())
  author    String
  message   String
  color     String
  createdAt DateTime @default(now())

  highlightedAt   DateTime?
  highlightedById String?
  highlightedBy   User?     @relation("ThoughtHighlightedBy", fields: [highlightedById], references: [id], onDelete: SetNull)
  deletedAt       DateTime?
  deletedById     String?
  deletedBy       User?     @relation("ThoughtDeletedBy", fields: [deletedById], references: [id], onDelete: SetNull)

  @@index([deletedAt, createdAt(sort: Desc), id(sort: Desc)])
}

model User {
  id              String   @id
  name            String
  email           String
  emailVerified   Boolean
  image           String?
  createdAt       DateTime
  updatedAt       DateTime
  username        String
  displayUsername String?
  bio             String?

  role       String?
  banned     Boolean?  @default(false)
  banReason  String?
  banExpires DateTime?

  sessions             Session[]
  accounts             Account[]
  settings             UserSettings?
  letters              Letter[]          @relation("LetterAuthor")
  letterLikes          LetterLike[]
  letterReplies        LetterReply[]     @relation("LetterReplyAuthor")
  letterReplyLikes     LetterReplyLike[]
  highlightedThoughts  Thought[]         @relation("ThoughtHighlightedBy")
  deletedLetters       Letter[]          @relation("LetterDeletedBy")
  deletedLetterReplies LetterReply[]     @relation("LetterReplyDeletedBy")
  deletedThoughts      Thought[]         @relation("ThoughtDeletedBy")
  statusLetters        Letter[]          @relation("LetterStatusBy")

  notifications      Notification[]      @relation("UserNotification")
  actedNotifications NotificationActor[]

  twoFactorEnabled Boolean?    @default(false)
  twofactors       TwoFactor[]

  @@unique([email])
  @@unique([username])
  @@map("user")
}

model UserSettings {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  privacySettings UserPrivacySettings?
}

enum VisibilityLevel {
  PUBLIC
  PRIVATE
}

model UserPrivacySettings {
  id         String       @id @default(uuid())
  settingsId String       @unique
  settings   UserSettings @relation(fields: [settingsId], references: [id], onDelete: Cascade)

  likesVisibility VisibilityLevel @default(PUBLIC)
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  impersonatedBy String?

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@index([identifier])
  @@map("verification")
}

model TwoFactor {
  id          String @id
  secret      String
  backupCodes String
  userId      String
  user        User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([secret])
  @@index([userId])
  @@map("twoFactor")
}

enum LetterStatus {
  PENDING
  APPROVED
  REJECTED
}

model Letter {
  id          String        @id @default(cuid())
  title       String
  body        String
  authorId    String?
  author      User?         @relation("LetterAuthor", fields: [authorId], references: [id], onDelete: Cascade)
  isAnonymous Boolean?      @default(false)
  likes       LetterLike[]
  replies     LetterReply[]

  status        LetterStatus @default(PENDING)
  statusSetById String?
  statusSetBy   User?        @relation("LetterStatusBy", fields: [statusSetById], references: [id], onDelete: SetNull)

  notifications Notification[]

  deletedAt   DateTime?
  deletedById String?
  deletedBy   User?     @relation("LetterDeletedBy", fields: [deletedById], references: [id], onDelete: SetNull)

  // Timestamp when the letter was approved and posted. Null for pending/rejected letters.
  postedAt         DateTime?
  contentUpdatedAt DateTime?
  updatedAt        DateTime  @updatedAt
  createdAt        DateTime  @default(now())

  @@index([deletedAt, createdAt(sort: Desc), id(sort: Desc)])
  @@index([authorId, deletedAt, createdAt(sort: Desc), id(sort: Desc)])
  @@index([status, deletedAt, createdAt(sort: Desc), id(sort: Desc)])
  @@index([status, deletedAt, postedAt(sort: Desc), id(sort: Desc)])
}

model LetterLike {
  id       String @id @default(uuid())
  userId   String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  letterId String
  letter   Letter @relation(fields: [letterId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, letterId])
}

model LetterReply {
  id          String            @id @default(cuid())
  body        String
  authorId    String
  author      User              @relation("LetterReplyAuthor", fields: [authorId], references: [id], onDelete: Cascade)
  isAnonymous Boolean?          @default(false)
  letterId    String
  letter      Letter            @relation(fields: [letterId], references: [id], onDelete: Cascade)
  likes       LetterReplyLike[]

  notifications Notification[]

  deletedAt   DateTime?
  deletedById String?
  deletedBy   User?     @relation("LetterReplyDeletedBy", fields: [deletedById], references: [id], onDelete: SetNull)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([deletedAt, createdAt(sort: Desc), id(sort: Desc)])
  @@index([letterId, deletedAt, createdAt(sort: Desc), id(sort: Desc)])
}

model LetterReplyLike {
  id      String      @id @default(uuid())
  userId  String
  user    User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  replyId String
  reply   LetterReply @relation(fields: [replyId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, replyId])
}

enum NotificationType {
  LETTER_LIKE
  LETTER_REPLY
  LETTER_REPLY_LIKE
}

model Notification {
  id                 String           @id @default(uuid())
  userId             String
  type               NotificationType
  isRead             Boolean          @default(false)
  isCountDecremented Boolean          @default(false)

  actors   NotificationActor[]
  letterId String?
  replyId  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User         @relation("UserNotification", fields: [userId], references: [id], onDelete: Cascade)
  letter Letter?      @relation(fields: [letterId], references: [id], onDelete: Cascade)
  reply  LetterReply? @relation(fields: [replyId], references: [id], onDelete: Cascade)

  @@index([userId, updatedAt(sort: Desc)])
}

model NotificationActor {
  id             String   @id @default(uuid())
  notificationId String
  userId         String
  createdAt      DateTime @default(now())

  notification Notification @relation(fields: [notificationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([notificationId, userId])
  @@index([notificationId, createdAt(sort: Desc)])
}
